/* pages/article/article.wxss */
/*page*/
.page {
	font-family: Arial, sans-serif;
	font-size: 20px;
  background-color: #f5f5f5;
  color: #333;
}

/*header*/
.title {
	text-align: center;
	margin-top: 10rpx;
	font-size: 24px;
}

.author-date-container {
	margin-left: auto;
	margin-right: auto;
	width: 90%;
	display: flex;
	flex-direction: row;
	justify-content: center;
	font-size: 14px;
	border-bottom-color: #333;
	border-bottom-style: ridge;
	border-bottom-width: 1px;
}
.author {
	margin-right: 10rpx;
}
/*content*/
.content-container {
	margin-top: 25rpx;
}

.content-container {
	width: 90%;
	margin-left: auto;
	margin-right: auto;
}

.content-item {
	text-indent: 2em;
	line-height: 1.8;
	margin-bottom: 1em;
	font-size: large;
}

/*reference*/
.reference {
	border-top-style: ridge;
	border-top-width: 1px;
	border-top-color: #333;
	width: 95%;
	margin-right: auto;
	margin-left: auto;
	font-size: 14px;
} 